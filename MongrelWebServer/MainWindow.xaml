<Window x:Class="MongrelWebServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mongrels Simple WebServer" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Start" Width="100" HorizontalAlignment="Left" Margin="5" Click="Button_Click" />
            <Button Content="Stop" Width="100" HorizontalAlignment="Left" Margin="5" Click="Button_Click_1" />
        </StackPanel>
        <TextBox Grid.Row="1" HorizontalAlignment="Stretch" Margin="5" Name="textBox1" VerticalAlignment="Stretch" />
    </Grid>
</Window>
